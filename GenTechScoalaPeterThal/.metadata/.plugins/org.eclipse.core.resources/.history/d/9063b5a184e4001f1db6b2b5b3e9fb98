	<script
		src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0-alpha1/js/bootstrap.bundle.min.js"></script>

	<script>
		document.addEventListener('DOMContentLoaded', function() {
			// Obținem referințele la butonul care deschide modalul și modalul însuși
			const showModalBtn = document.getElementById('showModalBtn');
			const hideModalBtn = document.getElementById('hideModalBtn');
			const modalElement = new bootstrap.Modal(document
					.getElementById('infoModal'));
			const buttons = document.getElementsByClassName('btn-close');

			if (showModalBtn) {

				showModalBtn.addEventListener('click', function() {
					modalElement.show();
				});
			}
			hideModalBtn.addEventListener('click', function() {
				modalElement.hide();
			});
			buttons[0].addEventListener('click', function() {
				modalElement.hide();
			});
		});
	</script>
