<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>Carti</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Funcția de căutare AJAX
        function searchBooks() {
            var title = $('#title').val();
            var author = $('#author').val();
            var genre = $('#genre').val();
            var publicationYear = $('#publicationYear').val();

            $.ajax({
                url: '/searchBooks',
                data: {
                    title: title,
                    author: author,
                    genre: genre,
                    publicationYear: publicationYear
                },
                success: function(response) {
                    var tableBody = $('#booksTable tbody');
                    tableBody.empty();  // Ștergem datele existente

                    
                    response.forEach(function(book) {
                        var row = $('<tr>');
                        row.append('<td>' + book.title + '</td>');
                        row.append('<td>' + book.author + '</td>');
                        row.append('<td>' + book.genre.name + '</td>');
                        row.append('<td>' + book.publicationYear + '</td>');
                        tableBody.append(row);
                    });
                }
            });
        }

        
        $(document).ready(function() {
        	 searchBooks();
            $('#title, #author, #genre, #publicationYear').on('input', function() {
                searchBooks();
            });
        });
    </script>
</head>
<body>
    <form id="searchForm">
    <table id="booksTable">
        <thead>
            <tr>
                <th>
                    <input type="text" id="title" name="title" placeholder="Cautare dupa Titlu" />
                </th>
                <th>
                    <input type="text" id="author" name="author" placeholder="Cautare dupa Autor" />
                </th>
                <th>
                   
                    <select id="genre" name="genre">
                        <option value="">Selecteaza gen</option>
                        <option th:each="g : ${genres}" th:value="${g.id}" th:text="${g.name}"></option>
                    </select>
                </th>
                <th>
                    <input type="number" id="publicationYear" name="publicationYear" placeholder="Cautare dupa An publicare" />
                </th>
            </tr>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Publication Year</th>
            </tr>
        </thead>
        <tbody>
           
        </tbody>
    </table>
</form>
</body>
</html>